<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="4dp"
    android:layout_marginLeft="12dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/idCamera"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="2dp"
            android:src="@drawable/camera"/>


    <TextView
        android:id="@+id/txtr1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/idCamera"
        android:text="Hyde Park"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/txtr1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="N41315"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtr1_1"/>
    <TextView
        android:id="@+id/txtr1_3"
        android:text="kldsfaklfjlk"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtr1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<TextView
    android:id="@+id/txtr1_4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#BD2419"
    android:background="@drawable/retangle"
    android:text="*****"
    android:padding="2dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/txtr1_3"/>
    <TextView
        android:id="@+id/txtr1_5"

        app:layout_constraintTop_toBottomOf="@id/txtr1_3"
        android:background="@drawable/retangle"
        android:text="9.9999ks"
        android:padding="2dp"
        app:layout_constraintLeft_toRightOf="@id/txtr1_4"
        android:layout_width="wrap_content"
        android:textColor="#FF5722"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>