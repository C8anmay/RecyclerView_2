<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="6dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
       android:id="@+id/txtNew"
       android:text="NEW"
        android:textAlignment="center"
       android:textColor="#FBFBF4"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       android:background="@drawable/oval"
       android:layout_margin="7dp"
       android:layout_width="55dp"
       android:layout_height="20dp"/>
    <TextView
        android:id="@+id/txtPercent"
        android:layout_width="55dp"
        android:textAlignment="center"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@id/txtNew"
        android:text="30%off"
        android:layout_margin="7dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/oval2"/>
    <TextView
        android:id="@+id/txtModel"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtNew"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="3dp"
        android:text="iphone jfka"/>
    <TextView
        android:id="@+id/txtName"
        app:layout_constraintTop_toBottomOf="@id/txtModel"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:text="jdsk"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtStar"
        app:layout_constraintTop_toBottomOf="@id/txtName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="2dp"
        android:textColor="#FF5722"
        android:text="***"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtNowPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtStar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#A61A10"
        android:text="989000ks"/>
    <TextView
        android:id="@+id/txtOldPrice"
        android:layout_width="wrap_content"
        android:text="9888ks"
        android:background="@drawable/strike"
        app:layout_constraintTop_toBottomOf="@id/txtStar"
        app:layout_constraintLeft_toRightOf="@id/txtNowPrice"
        android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgR2"
            app:layout_constraintLeft_toRightOf="@id/txtPercent"
            android:layout_marginLeft="60dp"
            app:layout_constraintBottom_toBottomOf="@id/constraintLayout1"
            app:layout_constraintTop_toTopOf="@id/constraintLayout1"
            app:layout_constraintRight_toRightOf="@id/constraintLayout1"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>